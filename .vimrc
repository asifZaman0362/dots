syntax on
set number  
set nowrap	
set linebreak	
set showbreak=+++ 	
set textwidth=100	
set showmatch

let g:gruvbox_contrast_dark = 'hard'
colorscheme gruvbox
 
set hlsearch	
set smartcase	
set ignorecase	
set incsearch	
 
set autoindent
set tabstop=4
set shiftwidth=4	
set smartindent	
set smarttab	
set softtabstop=4
set expandtab
 

set ruler	
 
set undolevels=1000	
set backspace=indent,eol,start	
hi NonText guifg=bg
